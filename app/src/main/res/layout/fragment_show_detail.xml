<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowDetailFragment">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mắt biếc"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                android:layout_marginTop="60dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/priceTxt"
                android:textColor="@color/red"
                android:text="100.000 VND"
                android:textSize="24sp"
                android:textAlignment="center"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:scaleType="fitCenter"
                android:id="@+id/detail_image"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:src="@drawable/book"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/btngiamsoluong"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/custom_nut"
                    android:text="-"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/imgsanpham"
                    app:layout_constraintStart_toEndOf="@+id/imgsanpham" />
                <TextView
                    android:id="@+id/txtsoluong"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="8dp"
                    android:text="1"
                    android:textColor="@color/text_second"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/btngiamsoluong"
                    app:layout_constraintStart_toEndOf="@+id/btngiamsoluong"
                    app:layout_constraintTop_toTopOf="@+id/btngiamsoluong" />
                <Button
                    android:id="@+id/btntangsoloung"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="9dp"
                    android:background="@drawable/custom_nut"
                    android:text="+"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/btngiamsoluong"
                    app:layout_constraintStart_toEndOf="@+id/txtsoluong"
                    app:layout_constraintTop_toTopOf="@+id/btngiamsoluong" />
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MÔ TẢ SẢN PHẨM"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_second"
                android:layout_margin="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:background="#DDDDDD">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tác giả"
                    android:textSize="19sp"
                    android:textColor="@color/text_second"/>

                <TextView
                    android:id="@+id/detail_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nguyễn Nhật Ánh"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:textColor="@color/text_second" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Năm xuất bản"
                    android:textSize="19sp"
                    android:textColor="@color/text_second"/>

                <TextView
                    android:id="@+id/detail_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2015"
                    android:textSize="19sp"
                    android:textColor="@color/text_second" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="#DDDDDD">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thể loại"
                    android:textSize="19sp"
                    android:textColor="@color/text_second"/>

                <TextView
                    android:id="@+id/detail_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tỉnh cảm"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:textColor="@color/text_second" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phiên bản sách"
                    android:textSize="19sp"
                    android:textColor="@color/text_second"/>

                <TextView
                    android:id="@+id/detail_phienban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Phiên bản thường"
                    android:textSize="19sp"
                    android:textColor="@color/text_second" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="#DDDDDD">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Công ty phát hành"
                    android:textSize="19sp"
                    android:textColor="@color/text_second"/>

                <TextView
                    android:id="@+id/detail_congtyphathanh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thái Hà"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:textColor="@color/text_second" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/descriptionTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Xem thêm chi tiết về sách"
                    android:layout_marginStart="232dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/purple"
                    android:textStyle="italic"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">
                <Button
                    android:id="@+id/detail_btnAddToCart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="Thêm giỏ hàng" />
                <Button
                    android:id="@+id/detail_btnBack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button2"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="Trở lại" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sản phẩm tương tự"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_second"
                android:layout_marginTop="16dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                 />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/similar_products_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

    </ScrollView>
</FrameLayout>